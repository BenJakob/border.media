                </div>
            {{else}}
                <div class="navbar-nav mr-auto">
                    <a class="nav-item nav-link" href="/equipment">Equipment</a>
                    <a class="nav-item nav-link" href="/my-equipment">Meine Ger√§te</a>
                    <a class="nav-item nav-link" href="/login">Logout</a>
                    <a class="nav-item nav-link" href="/cart"><img src="/img/shopping-cart.svg" alt="icon-cart"></a>
                </div>
            {{end}}
            <div class="navbar-nav">
                <a class="nav-item nav-link" href="/profil">{{.User.Name}} {{.User.LastName}}</a>
                <a class="nav-item nav-link" href="/profil"><img class="user-icon" src="{{.User.Image}}" alt="icon-user"></a>
            </div>
        {{else}}
            <div class="navbar-nav mr-auto">
                <a class="nav-item nav-link" href="/equipment">Equipment</a>
